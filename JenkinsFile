pipeline {
    agent any

    stages {
        // Stage 1: Checkout the Git repository
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']], // Specify the branch
                    extensions: [
                        [$class: 'CloneOption', depth: 1, shallow: true] // Shallow clone
                    ],
                    userRemoteConfigs: [[url: 'https://github.com/anandbagmar/getting-started-with-mobile-visualtesting.git']]
                ])
            }
        }

        // Stage 2: Setup appium
        stage('Setup') {
            steps {
                sh 'npm install'
            }
        }

        // Stage 3: Run Gradle tests
        stage('Run Tests') {
            steps {
                sh './gradlew clean test --tests CalculatorTest'
            }
        }
    }

    // Optional: Post-build actions
    post {
        success {
            echo 'Tests completed successfully!'
        }
        failure {
            echo 'Tests failed!'
        }
    }
}
